@model VisitOnline.Models.SickviewModels
@{
    ViewData["Title"] = "SickInformation";
    Layout = "~/Views/Shared/_PanelSickLayout.cshtml";
}

<div class="col-xl-9 col-lg-8 col-md-7 p-2">
    <div class="card border-0 rounded-custom-2 shadow-sm p-3 h-100">
        <div class="col-sm-12 p-2">
            <p class="h2 ismb text-b d-flex align-items-center justify-content-between">
                تکمیل اطلاعات
                <i class="bi bi-pen"></i>
            </p>
            <hr class="my-2">
        </div>
        <div class="py-3">
            <div class="col-xxl-10 m-auto p-1">
                <form asp-action="SickInformation" class="m-0">
                    <div class="row w-100 m-0">
                        <div class="col-12 px-2 pb-4">
                            <div class="pro-photo">
                                <div class="small-12 medium-2 large-2 columns max-content mx-auto position-relative">
                                    <div class="circle mx-auto">
                                        <img class="profile-pic rounded-circle" src="~/img/download.jpg">
                                    </div>
                                    <div class="p-image">
                                        <i class="bi bi-camera upload-button"></i>
                                        <input class="file-upload" type="file" accept="image/*" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">
                            <div class="">
                                <label for="input1" class="form-label" asp-for="NameFamily">
                                    نام و نام خانوادگی
                                </label>
                                <input type="text" asp-for="NameFamily" class="form-control rounded-custom-2 text-start" id="input1" value="@Model.NameFamily" placeholder="نام و نام خانوادگی خود را بنویسید">
                                <span asp-validation-for="NameFamily" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">
                            <div class="">
                                <label for="input2" class="form-label" asp-for="province">
                                   استان
                                </label>
                                <input type="text" asp-for="province" class="form-control rounded-custom-2 text-start" value="@Model.province" id="input112" placeholder="مانند : مازندران">
                                <span asp-validation-for="province" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">
                            <div class="form-outline">
                                <label for="input2" class="form-label" asp-for="City">
                                   شهر
                                </label>
                                <input type="text" asp-for="City" class="form-control rounded-custom-2 text-start" id="input12"  value="@Model.City" placeholder="مانند : ساری">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">
                            <div class="">
                                <label for="input2" class="form-label" asp-for="Mobile">
                                    شماره همراه
                                </label>
                                <input type="tel" asp-for="Mobile" class="form-control rounded-custom-2 text-start" id="input182" value="@Model.Mobile" disabled>
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">
                            <div class="">
                                <label for="input12" class="form-label" asp-for="Address">
                                    آدرس 
                                </label>
                                <input type="text" class="form-control" asp-for="Address" id="input12" rows="3" value="@Model.Address"/>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">

                            <div class="">
                                <label for="input22" class="form-label" asp-for="Region">
                                   منطقه
                                </label>
                                <input class="form-control" asp-for="Region" id="input22" rows="3" value="@Model.Region" />
                                <span asp-validation-for="Region" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">
                            <div class="">
                                <label for="input2" class="form-label" asp-for="Age">
                                    سن
                                </label>
                                <input type="number" asp-for="Age" class="form-control rounded-custom-2 text-start" id="input132" placeholder="سم خود را وارد کنید">
                            </div>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                      
                        <div class="col-lg-6 col-md-12 col-sm-6 p-2">

                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-6 ms-auto p-2">
                            <input type="submit" class="btn btn-success w-100 rounded-custom-2" value="ثبت اطلاعات" />


                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

